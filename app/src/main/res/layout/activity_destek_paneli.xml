<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/destek_panel"
    android:layout_width="match_parent"
    android:background="@drawable/login_background"
    android:layout_height="match_parent"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Destek Paneli"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="25sp" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ad"
            android:layout_marginTop="32dp"
            android:padding="18dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="25sp"
            android:background="@drawable/rounded_corner"
            android:inputType="text"
            android:id="@+id/destekpanelad_text">

        </EditText>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:padding="18dp"
            android:hint="Soyad"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="25sp"
            android:background="@drawable/rounded_corner"
            android:inputType="text"
            android:id="@+id/destekpanelsoyad_text">
        </EditText>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_gravity="left"
            android:layout_marginTop="32dp"
            android:padding="50dp"
            android:hint="Sorununuzu Yaziniz"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="25sp"
            android:background="@drawable/rounded_corner"
            android:inputType="text"
            android:id="@+id/aciklama_text">
        </EditText>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Gonder"
            android:textSize="30dp"
            android:id="@+id/gonder_btn"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"></Button>
    </LinearLayout>

</RelativeLayout>